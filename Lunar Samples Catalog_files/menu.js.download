// Requires jQuery

$(document).on('click','.menu-btn.closed',function(e){
	

	$('.js-menu_toggle.closed').removeClass('closed').addClass('opened');
	$(this).removeClass('closed').addClass('opened');

	$('.side_menu').css({ 'right':'0px' });

	
});

$(document).on('click','.menu-btn.opened',function(e){
	

	$('.js-menu_toggle.opened').removeClass('opened').addClass('closed');
	$(this).removeClass('opened').addClass('closed');

	$('.side_menu').css({ 'right':'-320px' });



	setTimeout(function () {      
         $(".collapse").removeClass("show");   
         $(".fa-angle-down").addClass('collapsed');      
	}, 300);

	
});







